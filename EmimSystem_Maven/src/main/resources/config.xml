<?xml version="1.0" encoding="UTF-8"?>
<woss>
	
	<!-- 网络模块(服务器) -->
	<server class="com.briup.environment.server.ServerImpl">
		<!-- 端口号 -->
		<server-port>8888</server-port>
	</server>
	
	<!-- 网络模块(客户端) -->
	<client class="com.briup.environment.client.ClientImpl">
		<!-- 服务器IP -->
		<client-ip>127.0.0.1</client-ip>
		<!-- 端口号 -->
		<client-port>8888</client-port>
	</client>
	
	<!-- 入库模块 -->
	<dbstore class="com.briup.environment.server.DBStoreImpl">
		<!-- 驱动类名 -->
		<driver>oracle.jdbc.driver.OracleDriver</driver>
		<!-- 数据库url -->
		<url>jdbc:oracle:thin:@192.168.255.1:1521:keshe</url>
		<!-- 数据库用户名 -->
		<user>wangdeyu</user>
		<!-- 数据库密码 -->
		<password>wangdeyu</password>
		<!-- 备份文件名称 -->
		<dbstore-backupFile>dbstore.bak</dbstore-backupFile>
	</dbstore>
	
	<!-- 采集模块 -->
	<gather class="com.briup.environment.client.GatherImpl">
		<!-- 原始数据文件路径 -->
		<src-file>src\main\resources\a.txt</src-file>
		<!-- 备份文件名称 -->
		<gather-backupFile>length.bak</gather-backupFile>
	</gather>
	
	<!-- 日志模块 -->
	<logger class="com.briup.environment.util.LogImpl">
		<!-- Log4j配置文件路径 -->
		<log-properties>src\main\resources\log4j.properties</log-properties>
	</logger>
	
	<!-- 备份模块 -->
	<backup class="com.briup.environment.util.BackupImpl">
		<!-- 备份文件路径 -->
		<filePath>src\main\resources\bak</filePath>
	</backup>
	
</woss>